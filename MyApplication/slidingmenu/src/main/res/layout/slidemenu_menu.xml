<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="240dp"
        android:orientation="vertical"
        android:background="@mipmap/menu_bg"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/tab_news"
             style="@style/tab_style"
            android:background="#33663300"
            android:drawableLeft="@mipmap/tab_news"
            android:text="新闻"
            />
        <TextView
            android:id="@+id/tab_read"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_read"
            android:text="订阅" />

        <TextView
            android:id="@+id/tab_local"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_local"
            android:text="本地" />

        <TextView
            android:id="@+id/tab_ties"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_ties"
            android:text="跟帖" />

        <TextView
            android:id="@+id/tab_pics"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_pics"
            android:text="图片" />

        <TextView
            android:id="@+id/tab_focus"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_focus"
            android:text="话题" />

        <TextView
            android:id="@+id/tab_vote"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_vote"
            android:text="投票" />

        <TextView
            android:id="@+id/tab_ugc"
            style="@style/tab_style"
            android:drawableLeft="@mipmap/tab_ugc"
            android:text="聚合阅读" />


    </LinearLayout>

</ScrollView>
